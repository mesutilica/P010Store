@model HomePageViewModel

@{
    ViewData["Title"] = "Anasayfa";
}

<partial name="_Carousel" model="Model.Carousels" />

@section Scripts{
    <script>
        $(".carousel-item:first").addClass("active")
    </script>
}

<!-- Header-->
<header class="bg-dark py-3 mt-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="text-center text-white">
            <h1 class="display-4 fw-bolder">Ürünlerimiz</h1>
            <p class="lead fw-normal text-white-50 mb-0">Sizin için seçtiklerimiz</p>
        </div>
    </div>
</header>

<!-- Section-->
<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @foreach (var item in Model.Products)
            {
                <div class="col mb-5">
                    <div class="card h-100">
                        <!-- Product image-->
                        <img class="card-img-top" src="/Img/Products/@item.Image" alt="@item.Name" title="@item.Name" />
                        <!-- Product details-->
                        <div class="card-body p-4">
                            <div class="text-center">
                                <!-- Product name-->
                                <h5 class="fw-bolder">@item.Name</h5>
                                <!-- Product price-->
                                @item.Price ₺
                            </div>
                        </div>
                        <!-- Product actions-->
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="/Products/Detail/@item.Id">İncele</a></div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>